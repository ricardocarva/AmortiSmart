<div class="container">
  <h3>Connect</h3>
  <p>Talk to other users of MortiSmart</p>
  <div class="container card card flex-1 light-mode light-container-border light-container-bg mx-auto mb-15">
  <div class="content-header light-container-border light-mode row m-0 align">New Post 
    <button id="newPost" style="width:48px;" class="btn btn-login teal lighten-3 m-auto right">
        <i id="newPostIcon" class="fa-solid fa-plus right"></i>
    </button>
  </div>
  <div id="hideNew" class="row mb-0 d-none">

  <form action="/" method="POST" class="col s12">
    <div class="row mb-0">
      <div class="input-field col s12">
          <input type="text" name="title" id="post-title">
          <label style="width:100%;" for="post-title">Title your post</label>
          </div>
        <div class="input-field col s12">
          <textarea id="post-text" class="materialize-textarea"></textarea>
          <label style="width:100%;" for="post-text">Write your post here</label>
        </div>
      </div>
      <div class="row flex">
        <button id="post-submit" class="btn btn-login teal lighten-3 m-auto">
          <i class="fa-solid fa-question left"></i>
          Submit a post
        </button>
      </div>
    
  </form>
  </div>
  </div>
  <div id="forum-container" class="container">

  </div>
 
</div>
<script type="module" src="scripts/connect.js"></script>